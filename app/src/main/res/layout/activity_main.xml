<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.tigerpenguin.lab.bitmapmemory.MainActivity"
              tools:ignore="MergeRootFrame">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <!-- Image Load -->
            <TextView
                    style="@style/label"
                    android:text="Image Load"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="Simple Image Load"
                    android:onClick="onSimpleImageLoadClick"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="Sampled Image Load"
                    android:onClick="onSampledImageLoadClick"/>

            <!-- Image Release -->
            <TextView
                    style="@style/label"
                    android:layout_marginTop="10dp"
                    android:text="Image Release"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="Simple Image Release"
                    android:onClick="onSimpleImageReleaseClick"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="Bitmap Recycle"
                    android:onClick="onBitmapRecycleClick"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="Image Detach"
                    android:onClick="onImageDetachClick"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="Hardware Off Release"
                    android:onClick="onHardwareOffReleaseClick"/>

            <Button
                    style="@style/buttonStyle"
                    android:text="View Hardware Off Release"
                    android:onClick="onViewHardwareOffReleaseClick"/>

        </LinearLayout>

    </ScrollView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://lab.tigerpenguin.com"
            android:padding="10dp"
            android:gravity="center"
            android:autoLink="web"/>

</LinearLayout>
